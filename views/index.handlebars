<!-- Image and text -->
<nav>
  <div class="mdl-card__title">
    <h2 class="mdl-card__title-text">Burger Diary</h2>
  </div>
</nav>
<br>
<br>
<form class="create-form">
    <div class="bg-add">
    {{!-- <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="b_name" name="name">
    </div> --}}
        <div class="mdl-textfield mdl-js-textfield">
            <input class="mdl-textfield__input" type="text" id="b_name">
            <label class="mdl-textfield__label" for="burger_name">Burger On your Wish List</label>
        </div>
        <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored" type="submit">  <i class="material-icons">add</i></button>
    </div>
</form>
<hr>
<div class="mdl-grid bg-table">
  <div class="mdl-cell mdl-cell--6-col">
      <h2>Burger-Wish-List</h2>
      <ul class="mdl-list">
        {{#each burger}}
            {{#unless devoured}}
            {{> burger/burger-block devoured=false}}
            {{/unless}}
        {{/each}}
        </ul>
  </div>
  <div class="mdl-cell mdl-cell--6-col">
      <h2>Ate these!</h2>
        <ul class="mdl-list">
        {{#each burger}}
            {{#if devoured}}
            {{> burger/burger-block devoured=true}}
            {{/if}}
        {{/each}}
        </ul>
  </div>
</div>

